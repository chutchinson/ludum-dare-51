code = "shader_type spatial;
render_mode diffuse_toon, specular_toon, cull_back;

uniform sampler2D stamp: hint_albedo;
uniform vec4 albedo: hint_color;
uniform vec4 emission: hint_color;
uniform float emission_energy;

vec2 rotate (vec2 uv, vec2 pivot, float angle) {
	float rsin = sin(angle);
	float rcos = cos(angle);
	uv -= pivot;
	uv.x = uv.x * rcos - uv.y * rsin;
	uv.y = uv.x * rsin + uv.y * rcos;
	uv += pivot;
	return uv;
}

void fragment () {

	float t = TIME * 6.0;
	vec2 uv = rotate(UV, vec2(01.0), 0);

	vec4 color = texture(stamp, uv * 2.0);
	vec3 emit = emission.rgb * emission_energy;
	
	float y = 0.5 * (sin(t) + 1.0);
	float intensity = mix(1.0, 5.0, y);
	
	emit.rgb *= y;
	
	ALPHA = color.r;
	ALBEDO = albedo.rgb;
	EMISSION = emit.rgb * intensity;
}"

